<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrainingTracker.App.TrainingPlanPage"
             Title="Training Plan">

    <Grid RowDefinitions="Auto,*">

        <!-- Weekday header -->
        <Grid Grid.Row="0"
              ColumnDefinitions="*,*,*,*,*,*,*"
              Padding="0,8">
            <Label Grid.Column="0" Text="Mon" HorizontalOptions="Center" FontAttributes="Bold" />
            <Label Grid.Column="1" Text="Tue" HorizontalOptions="Center" FontAttributes="Bold" />
            <Label Grid.Column="2" Text="Wed" HorizontalOptions="Center" FontAttributes="Bold" />
            <Label Grid.Column="3" Text="Thu" HorizontalOptions="Center" FontAttributes="Bold" />
            <Label Grid.Column="4" Text="Fri" HorizontalOptions="Center" FontAttributes="Bold" />
            <Label Grid.Column="5" Text="Sat" HorizontalOptions="Center" FontAttributes="Bold" />
            <Label Grid.Column="6" Text="Sun" HorizontalOptions="Center" FontAttributes="Bold" />
        </Grid>

        <!-- Training weeks -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Weeks}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*,*,*,*,*,*,*"
                          MinimumHeightRequest="80">

                        <!-- Monday -->
                        <Border Grid.Column="0" Padding="6" Stroke="LightGray" StrokeThickness="0.5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Days[0].Date, StringFormat='{0:MMM d, yyyy}'}"
                                       FontAttributes="Bold" FontSize="13" />
                                <Label Text="{Binding Days[0].Session.Type}"
                                       FontSize="11" TextColor="Gray" />
                                <Label Text="{Binding Days[0].Session.DistanceKm, StringFormat='{0} km'}"
                                       FontSize="11" />
                            </VerticalStackLayout>
                        </Border>

                        <!-- Tuesday -->
                        <Border Grid.Column="1" Padding="6" Stroke="LightGray" StrokeThickness="0.5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Days[1].Date, StringFormat='{0:MMM d, yyyy}'}"
                                       FontAttributes="Bold" FontSize="13" />
                                <Label Text="{Binding Days[1].Session.Type}"
                                       FontSize="11" TextColor="Gray" />
                                <Label Text="{Binding Days[1].Session.DistanceKm, StringFormat='{0} km'}"
                                       FontSize="11" />
                            </VerticalStackLayout>
                        </Border>

                        <!-- Wednesday -->
                        <Border Grid.Column="2" Padding="6" Stroke="LightGray" StrokeThickness="0.5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Days[2].Date, StringFormat='{0:MMM d, yyyy}'}"
                                       FontAttributes="Bold" FontSize="13" />
                                <Label Text="{Binding Days[2].Session.Type}"
                                       FontSize="11" TextColor="Gray" />
                                <Label Text="{Binding Days[2].Session.DistanceKm, StringFormat='{0} km'}"
                                       FontSize="11" />
                            </VerticalStackLayout>
                        </Border>

                        <!-- Thursday -->
                        <Border Grid.Column="3" Padding="6" Stroke="LightGray" StrokeThickness="0.5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Days[3].Date, StringFormat='{0:MMM d, yyyy}'}"
                                       FontAttributes="Bold" FontSize="13" />
                                <Label Text="{Binding Days[3].Session.Type}"
                                       FontSize="11" TextColor="Gray" />
                                <Label Text="{Binding Days[3].Session.DistanceKm, StringFormat='{0} km'}"
                                       FontSize="11" />
                            </VerticalStackLayout>
                        </Border>

                        <!-- Friday -->
                        <Border Grid.Column="4" Padding="6" Stroke="LightGray" StrokeThickness="0.5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Days[4].Date, StringFormat='{0:MMM d, yyyy}'}"
                                       FontAttributes="Bold" FontSize="13" />
                                <Label Text="{Binding Days[4].Session.Type}"
                                       FontSize="11" TextColor="Gray" />
                                <Label Text="{Binding Days[4].Session.DistanceKm, StringFormat='{0} km'}"
                                       FontSize="11" />
                            </VerticalStackLayout>
                        </Border>

                        <!-- Saturday -->
                        <Border Grid.Column="5" Padding="6" Stroke="LightGray" StrokeThickness="0.5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Days[5].Date, StringFormat='{0:MMM d, yyyy}'}"
                                       FontAttributes="Bold" FontSize="13" />
                                <Label Text="{Binding Days[5].Session.Type}"
                                       FontSize="11" TextColor="Gray" />
                                <Label Text="{Binding Days[5].Session.DistanceKm, StringFormat='{0} km'}"
                                       FontSize="11" />
                            </VerticalStackLayout>
                        </Border>

                        <!-- Sunday -->
                        <Border Grid.Column="6" Padding="6" Stroke="LightGray" StrokeThickness="0.5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Days[6].Date, StringFormat='{0:MMM d, yyyy}'}"
                                       FontAttributes="Bold" FontSize="13" />
                                <Label Text="{Binding Days[6].Session.Type}"
                                       FontSize="11" TextColor="Gray" />
                                <Label Text="{Binding Days[6].Session.DistanceKm, StringFormat='{0} km'}"
                                       FontSize="11" />
                            </VerticalStackLayout>
                        </Border>

                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>

</ContentPage>
