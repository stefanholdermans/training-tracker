<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TrainingTracker.App"
             x:Class="TrainingTracker.App.TrainingPlanPage"
             Title="Training Plan">

    <ContentPage.Resources>
        <local:HexToColorConverter x:Key="HexToColorConverter" />
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*">

        <!-- Weekday header -->
        <Grid Grid.Row="0"
              ColumnDefinitions="*,*,*,*,*,*,*,*"
              Padding="0,8">
            <Label Grid.Column="0" Text="Mon"   HorizontalOptions="Center" FontAttributes="Bold" />
            <Label Grid.Column="1" Text="Tue"   HorizontalOptions="Center" FontAttributes="Bold" />
            <Label Grid.Column="2" Text="Wed"   HorizontalOptions="Center" FontAttributes="Bold" />
            <Label Grid.Column="3" Text="Thu"   HorizontalOptions="Center" FontAttributes="Bold" />
            <Label Grid.Column="4" Text="Fri"   HorizontalOptions="Center" FontAttributes="Bold" />
            <Label Grid.Column="5" Text="Sat"   HorizontalOptions="Center" FontAttributes="Bold" />
            <Label Grid.Column="6" Text="Sun"   HorizontalOptions="Center" FontAttributes="Bold" />
            <Label Grid.Column="7" Text="Total" HorizontalOptions="Center" FontAttributes="Bold" />
        </Grid>

        <!-- Training weeks -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Weeks}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*,*,*,*,*,*,*,*"
                          MinimumHeightRequest="80">

                        <!-- Monday -->
                        <Border Grid.Column="0" Padding="6" Stroke="LightGray" StrokeThickness="0.5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Days[0].Date, StringFormat='{0:MMM d, yyyy}'}"
                                       FontSize="11" TextColor="Gray" />
                                <Border BackgroundColor="{Binding Days[0].Session.Color, Converter={StaticResource HexToColorConverter}}"
                                        StrokeThickness="0"
                                        Padding="4,2">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="4" />
                                    </Border.StrokeShape>
                                    <Label Text="{Binding Days[0].Session.DisplayName}"
                                           TextColor="White" FontAttributes="Bold" FontSize="13" />
                                </Border>
                                <Label Text="{Binding Days[0].Session.DistanceKm, StringFormat='{0:0}K'}"
                                       FontSize="13" />
                            </VerticalStackLayout>
                        </Border>

                        <!-- Tuesday -->
                        <Border Grid.Column="1" Padding="6" Stroke="LightGray" StrokeThickness="0.5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Days[1].Date, StringFormat='{0:MMM d, yyyy}'}"
                                       FontSize="11" TextColor="Gray" />
                                <Border BackgroundColor="{Binding Days[1].Session.Color, Converter={StaticResource HexToColorConverter}}"
                                        StrokeThickness="0"
                                        Padding="4,2">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="4" />
                                    </Border.StrokeShape>
                                    <Label Text="{Binding Days[1].Session.DisplayName}"
                                           TextColor="White" FontAttributes="Bold" FontSize="13" />
                                </Border>
                                <Label Text="{Binding Days[1].Session.DistanceKm, StringFormat='{0:0}K'}"
                                       FontSize="13" />
                            </VerticalStackLayout>
                        </Border>

                        <!-- Wednesday -->
                        <Border Grid.Column="2" Padding="6" Stroke="LightGray" StrokeThickness="0.5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Days[2].Date, StringFormat='{0:MMM d, yyyy}'}"
                                       FontSize="11" TextColor="Gray" />
                                <Border BackgroundColor="{Binding Days[2].Session.Color, Converter={StaticResource HexToColorConverter}}"
                                        StrokeThickness="0"
                                        Padding="4,2">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="4" />
                                    </Border.StrokeShape>
                                    <Label Text="{Binding Days[2].Session.DisplayName}"
                                           TextColor="White" FontAttributes="Bold" FontSize="13" />
                                </Border>
                                <Label Text="{Binding Days[2].Session.DistanceKm, StringFormat='{0:0}K'}"
                                       FontSize="13" />
                            </VerticalStackLayout>
                        </Border>

                        <!-- Thursday -->
                        <Border Grid.Column="3" Padding="6" Stroke="LightGray" StrokeThickness="0.5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Days[3].Date, StringFormat='{0:MMM d, yyyy}'}"
                                       FontSize="11" TextColor="Gray" />
                                <Border BackgroundColor="{Binding Days[3].Session.Color, Converter={StaticResource HexToColorConverter}}"
                                        StrokeThickness="0"
                                        Padding="4,2">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="4" />
                                    </Border.StrokeShape>
                                    <Label Text="{Binding Days[3].Session.DisplayName}"
                                           TextColor="White" FontAttributes="Bold" FontSize="13" />
                                </Border>
                                <Label Text="{Binding Days[3].Session.DistanceKm, StringFormat='{0:0}K'}"
                                       FontSize="13" />
                            </VerticalStackLayout>
                        </Border>

                        <!-- Friday -->
                        <Border Grid.Column="4" Padding="6" Stroke="LightGray" StrokeThickness="0.5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Days[4].Date, StringFormat='{0:MMM d, yyyy}'}"
                                       FontSize="11" TextColor="Gray" />
                                <Border BackgroundColor="{Binding Days[4].Session.Color, Converter={StaticResource HexToColorConverter}}"
                                        StrokeThickness="0"
                                        Padding="4,2">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="4" />
                                    </Border.StrokeShape>
                                    <Label Text="{Binding Days[4].Session.DisplayName}"
                                           TextColor="White" FontAttributes="Bold" FontSize="13" />
                                </Border>
                                <Label Text="{Binding Days[4].Session.DistanceKm, StringFormat='{0:0}K'}"
                                       FontSize="13" />
                            </VerticalStackLayout>
                        </Border>

                        <!-- Saturday -->
                        <Border Grid.Column="5" Padding="6" Stroke="LightGray" StrokeThickness="0.5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Days[5].Date, StringFormat='{0:MMM d, yyyy}'}"
                                       FontSize="11" TextColor="Gray" />
                                <Border BackgroundColor="{Binding Days[5].Session.Color, Converter={StaticResource HexToColorConverter}}"
                                        StrokeThickness="0"
                                        Padding="4,2">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="4" />
                                    </Border.StrokeShape>
                                    <Label Text="{Binding Days[5].Session.DisplayName}"
                                           TextColor="White" FontAttributes="Bold" FontSize="13" />
                                </Border>
                                <Label Text="{Binding Days[5].Session.DistanceKm, StringFormat='{0:0}K'}"
                                       FontSize="13" />
                            </VerticalStackLayout>
                        </Border>

                        <!-- Sunday -->
                        <Border Grid.Column="6" Padding="6" Stroke="LightGray" StrokeThickness="0.5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Days[6].Date, StringFormat='{0:MMM d, yyyy}'}"
                                       FontSize="11" TextColor="Gray" />
                                <Border BackgroundColor="{Binding Days[6].Session.Color, Converter={StaticResource HexToColorConverter}}"
                                        StrokeThickness="0"
                                        Padding="4,2">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="4" />
                                    </Border.StrokeShape>
                                    <Label Text="{Binding Days[6].Session.DisplayName}"
                                           TextColor="White" FontAttributes="Bold" FontSize="13" />
                                </Border>
                                <Label Text="{Binding Days[6].Session.DistanceKm, StringFormat='{0:0}K'}"
                                       FontSize="13" />
                            </VerticalStackLayout>
                        </Border>

                        <!-- Weekly total -->
                        <Border Grid.Column="7" Padding="6" Stroke="LightGray" StrokeThickness="0.5">
                            <Label Text="{Binding TotalDistanceKm, StringFormat='{0:0}K'}"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>

                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>

</ContentPage>
